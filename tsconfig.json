{
	"compilerOptions": {
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"incremental": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"isolatedModules": true,
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@common/*": ["./common/src/*"],
			"@db/*": ["./db/src/*"]
		}
	}
}
